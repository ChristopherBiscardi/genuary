@fragment
fn fragment(mesh: VertexOutput) -> @location(0) vec4<f32> {
    let color = vec4<f32>(
        ((simplexNoise2(mesh.uv*15. / 20.0 + globals.time / 10.)) + 1.0) / 2.0 * (sin(globals.time)+ 1.0) / 2.0,
        ((simplexNoise2(mesh.uv*25. / 20.0 + globals.time / 10.)) + 1.0) / 2.0 * (cos(globals.time)+ 1.0) / 2.0,
        ((simplexNoise2(mesh.uv*75. / 20.0 + globals.time / 10.)) + 1.0) / 2.0 * (tanh(globals.time)+ 1.0) / 2.0,
        1.0
    );
    // let color = vec4<f32>(1.0,0.5,1.0,1.0);
    return (simplexNoise2(mesh.uv * 15. / 20. + globals.time ) + 2.0)
         * (voroNoise2(mesh.uv * 10. + globals.time / 100.0, 1.0, 1.0) + 1.0 )/ 2.0
         * (voroNoise2(mesh.uv * 5. - globals.time / 50.0, 0.5, 1.0) + 1.0 )/ 2.0
         * color
         * ((
            simplexNoise2(vec2<f32>(
                globals.time / 10.,
                (voroNoise2((mesh.uv + globals.time) * 10., 1.0, 1.0) + 1.0) / 2.0
            )) + 1.0
          ) / 2.0) ;
    //  * textureSample(base_color_texture, base_color_sampler, mesh.uv) * COLOR_MULTIPLIER;
}

// https://www.pcg-random.org/
fn pcg(n: u32) -> u32 {
    var h = n * 747796405u + 2891336453u;
    h = ((h >> ((h >> 28u) + 4u)) ^ h) * 277803737u;
    return (h >> 22u) ^ h;
}

fn pcg2d(p: vec2u) -> vec2u {
    var v = p * 1664525u + 1013904223u;
    v.x += v.y * 1664525u; v.y += v.x * 1664525u;
    v ^= v >> vec2u(16u);
    v.x += v.y * 1664525u; v.y += v.x * 1664525u;
    v ^= v >> vec2u(16u);
    return v;
}

// http://www.jcgt.org/published/0009/03/02/
fn pcg3d(p: vec3u) -> vec3u {
    var v = p * 1664525u + 1013904223u;
    v.x += v.y*v.z; v.y += v.z*v.x; v.z += v.x*v.y;
    v ^= v >> vec3u(16u);
    v.x += v.y*v.z; v.y += v.z*v.x; v.z += v.x*v.y;
    return v;
}

// http://www.jcgt.org/published/0009/03/02/
fn pcg4d(p: vec4u) -> vec4u {
    var v = p * 1664525u + 1013904223u;
    v.x += v.y*v.w; v.y += v.z*v.x; v.z += v.x*v.y; v.w += v.y*v.z;
    v ^= v >> vec4u(16u);
    v.x += v.y*v.w; v.y += v.z*v.x; v.z += v.x*v.y; v.w += v.y*v.z;
    return v;
}
